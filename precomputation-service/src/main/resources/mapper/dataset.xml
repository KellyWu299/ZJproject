            keyProperty="id" useGeneratedKeys="true">
        insert into dataset
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                name,
            </if>
            <if test="source != null">
                source,
            </if>
            <if test="description != null">
                description,
            </if>
            <if test="vertexnum != null">
                vertexnum,
            </if>
            <if test="edgenum != null">
                edgenum,
            </if>
            <if test="vertexProperty != null">
                vertexProperty,
            </if>
            <if test="edgeProperty != null">
                edgeProperty,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="source != null">
                #{source,jdbcType=TINYINT},
            </if>
            <if test="description != null">
                #{description,jdbcType=VARCHAR},
            </if>
            <if test="vertexnum != null">
                #{vertexnum,jdbcType=BIGINT},
