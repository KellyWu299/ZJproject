    <resultMap id="Dataset" type="org.hnu.precomputation.common.model.dataset.Dataset">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="source" jdbcType="TINYINT" property="source"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="vertexProperty" jdbcType="VARCHAR" property="vertexProperty"/>
        <result column="edgeProperty" jdbcType="VARCHAR" property="edgeProperty"/>
    </resultMap>

    <insert id="insert" parameterType="org.hnu.precomputation.common.model.dataset.Dataset"
            keyProperty="id" useGeneratedKeys="true">
        insert into dataset
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null">
                name,
            </if>
            <if test="source != null">
                source,
            </if>
            <if test="description != null">
                description,
            </if>
            <if test="vertexProperty!= null">
                vertexProperty ,
            </if>
            <if test="edgeProperty!= null">
                edgeProperty ,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="source != null">
                #{source,jdbcType=TINYINT},
            </if>
            <if test="description != null">
                #{description,jdbcType=VARCHAR},
            </if>
            <if test="vertexProperty != null">
                #{vertexProperty,jdbcType=VARCHAR},
            </if>
            <if test="edgeProperty != null">
                #{edgeProperty,jdbcType=VARCHAR},
            </if>
        </trim>
    </insert>

    <select id="deleteByPrimaryKey" parameterType="java.lang.Long">
        delete
        from dataset
        where id = #{id}
    </select>

    <select id="selectByPrimaryKey" resultMap="Dataset" parameterType="java.lang.Long">
        select id, name, source, description, vertexProperty,edgeProperty
        from dataset
        where id = #{id}
    </select>

    <update id="updateByPrimaryKey" parameterType="org.hnu.precomputation.common.model.dataset.Dataset">
        update dataset
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="source != null">
                source = #{source,jdbcType=TINYINT},
            </if>
            <if test="description != null">
                description = #{description,jdbcType=VARCHAR},
            </if>
            <if test="vertexProperty != null">
                vertexProperty = #{vertexProperty,jdbcType=VARCHAR},
            </if>
            <if test="edgeProperty != null">
                edgeProperty = #{edgeProperty,jdbcType=VARCHAR},
            </if>

        </set>
        where id = #{id,jdbcType=BIGINT}
    </update>

</mapper>